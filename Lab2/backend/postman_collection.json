{
	"info": {
		"_postman_id": "feedmate-api-tests-fixed",
		"name": "FeedMate API Tests - Fixed",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{ "key": "baseUrl", "value": "http://localhost:3000" },
		{ "key": "token", "value": "" },
		{ "key": "petId", "value": "" },
		{ "key": "planId", "value": "" }
	],
	"item": [
		{
			"name": "Auth - Register",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"test2@mail.com\",\n  \"password\": \"Password123\",\n  \"fullName\": \"Test User\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": { "raw": "{{baseUrl}}/api/auth/register" }
			}
		},
		{
			"name": "Auth - Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();",
							"if (response.token) {",
							"    pm.collectionVariables.set('token', response.token);",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"test2@mail.com\",\n  \"password\": \"Password123\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": { "raw": "{{baseUrl}}/api/auth/login" }
			}
		},
		{
			"name": "Pets - Create",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();",
							"if (response.pet && response.pet.id) {",
							"    pm.collectionVariables.set('petId', response.pet.id);",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{token}}" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Laki\",\n  \"foodType\": \"Dry\",\n  \"recommendedPortionGrams\": 13\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": { "raw": "{{baseUrl}}/api/pets/add" }
			}
		},
		{
			"name": "Feeding Plan - Create",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();",
							"if (response.plan && response.plan.id) {",
							"    pm.collectionVariables.set('planId', response.plan.id);",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{token}}" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Daily plan\",\n  \"description\": \"Morning / Evening\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": { "raw": "{{baseUrl}}/api/feeding-plans" }
			}
		},
		{
			"name": "Assign Plan to Pet",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{token}}" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"feedingPlanId\": \"{{planId}}\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": { "raw": "{{baseUrl}}/api/pets/{{petId}}/feeding-plan" }
			}
		},
		{
			"name": "Add Schedule",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{token}}" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"feedTime\": \"08:00\",\n  \"portionGrams\": 13,\n  \"mode\": \"AUTO\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": { "raw": "{{baseUrl}}/api/feeding-plans/{{planId}}/schedules" }
			}
		},
		{
			"name": "Get Pet Schedules",
			"request": {
				"method": "GET",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{token}}" }
				],
				"url": { "raw": "{{baseUrl}}/api/pets/{{petId}}/schedules" }
			}
		},
		{
			"name": "Create Feeding Event",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{token}}" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"petId\": \"{{petId}}\",\n  \"portionGrams\": 13,\n  \"source\": \"AUTO\",\n  \"status\": \"success\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": { "raw": "{{baseUrl}}/api/events/add" }
			}
		},
		{
			"name": "Get Pet Events",
			"request": {
				"method": "GET",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{token}}" }
				],
				"url": { "raw": "{{baseUrl}}/api/events/pet/{{petId}}" }
			}
		}
	]
}